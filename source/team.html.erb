<div id="team">
<ul class="list-inline text-center">
  <% ["christian", "jean"].each do |gh_username| %>
    <li>
      <%= image_tag "/images/#{gh_username}.jpg", class: "img-circle" %>
      <h3><%= gh_username.capitalize %></h3>
          <p>
            <% link_to "https://github.com/#{gh_username}", target: "_blank" do %>
              <i class="fa fa-github"></i> <%= gh_username %>
            <% end %>
          </p>
    </li>
  <% end %>
</ul>
</div>
